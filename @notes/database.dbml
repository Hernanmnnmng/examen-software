// --- LARAVEL USERS & ROLES ---
Table Roles {
  id int [pk, increment]
  name varchar(50) [unique]
  guard_name varchar(50) [default: 'web']

  created_at datetime(6) [null]
  updated_at datetime(6) [null]
}

Table users {
  id int [pk, increment]
  role_id int
  name varchar(255)
  email varchar(255) [unique]
  email_verified_at datetime(6) [null]
  password varchar(255)
  remember_token varchar(100) [null]
  created_at datetime(6) [null]
  updated_at datetime(6) [null]
}

// --- STAMGEGEVENS ---

Table Adressen {
  id int [pk, increment]
  Straat varchar(255)
  Huisnummer varchar(20) // Kan 12, 12a, 12-rood zijn, dus varchar
  Postcode char(6)       // AANGEPAST: Vast formaat (bijv. 1234AB)
  Plaats varchar(100)

  IsActief bit [default: 1]
  Opmerking varchar(255)
  DatumAangemaakt datetime(6) [default: `CURRENT_TIMESTAMP`]
  DatumGewijzigd datetime(6) [default: `CURRENT_TIMESTAMP`]
}

Table ProductCategorieen {
  id int [pk, increment]
  Naam varchar(100) [unique] // 100 is ruim voldoende voor een categorienaam

  IsActief bit [default: 1]
  Opmerking varchar(255)
  DatumAangemaakt datetime(6) [default: `CURRENT_TIMESTAMP`]
  DatumGewijzigd datetime(6) [default: `CURRENT_TIMESTAMP`]
}

Table Wensen {
  id int [pk, increment]
  Omschrijving varchar(100) [unique] // Korte omschrijvingen (Vegan, Halal)

  IsActief bit [default: 1]
  Opmerking varchar(255)
  DatumAangemaakt datetime(6) [default: `CURRENT_TIMESTAMP`]
  DatumGewijzigd datetime(6) [default: `CURRENT_TIMESTAMP`]
}

Table Allergenen {
  id int [pk, increment]
  Naam varchar(100) [unique] // Bijv: 'Gluten', 'Pinda's'

  IsActief bit [default: 1]
  Opmerking varchar(255)
  DatumAangemaakt datetime(6) [default: `CURRENT_TIMESTAMP`]
  DatumGewijzigd datetime(6) [default: `CURRENT_TIMESTAMP`]
}

// --- RELATIES & PARTIJEN ---

Table Leveranciers {
  id int [pk, increment]
  Bedrijfsnaam varchar(255)
  adres_id int
  contactpersoon_id int

  IsActief bit [default: 1]
  Opmerking varchar(255)
  DatumAangemaakt datetime(6) [default: `CURRENT_TIMESTAMP`]
  DatumGewijzigd datetime(6) [default: `CURRENT_TIMESTAMP`]
}

Table contactpersoon {
  id int [pk, increment]
  ContactNaam varchar(255)
  Email varchar(255)
  Telefoon varchar(20) // Flexibel voor int. nummers

  IsActief bit [default: 1]
  Opmerking varchar(255)
  DatumAangemaakt datetime(6) [default: `CURRENT_TIMESTAMP`]
  DatumGewijzigd datetime(6) [default: `CURRENT_TIMESTAMP`]
}

Table Klanten {
  id int [pk, increment]
  user_id int [unique]
  adres_id int
  gezin_id int
  Telefoon varchar(20)

  IsActief bit [default: 1]
  Opmerking varchar(255)
  DatumAangemaakt datetime(6) [default: `CURRENT_TIMESTAMP`]
  DatumGewijzigd datetime(6) [default: `CURRENT_TIMESTAMP`]
}

Table Gezinnen {
  id int [pk, increment]
  GezinsNaam varchar(255)
  Volwassenen tinyint [default: 0] // AANGEPAST: Max 255 is genoeg
  Kinderen tinyint [default: 0]    // AANGEPAST
  Babys tinyint [default: 0]       // AANGEPAST

  IsActief bit [default: 1]
  Opmerking varchar(255)
  DatumAangemaakt datetime(6) [default: `CURRENT_TIMESTAMP`]
  DatumGewijzigd datetime(6) [default: `CURRENT_TIMESTAMP`]
}

// --- PRODUCTEN & VOORRAAD ---

Table Producten {
  id int [pk, increment]
  ProductNaam varchar(255) [unique]
  EAN char(13) [unique] // AANGEPAST: EAN-13 is altijd 13 cijfers
  categorie_id int
  AantalVoorraad int [default: 0]
  MagazijnLocatie varchar(50) // 'Stelling A' hoeft niet lang te zijn

  IsActief bit [default: 1]
  Opmerking varchar(255)
  DatumAangemaakt datetime(6) [default: `CURRENT_TIMESTAMP`]
  DatumGewijzigd datetime(6) [default: `CURRENT_TIMESTAMP`]
}

Table ProductKenmerken {
  id int [pk, increment]
  product_id int
  wens_id int

  IsActief bit [default: 1]
  Opmerking varchar(255)
  DatumAangemaakt datetime(6) [default: `CURRENT_TIMESTAMP`]
  DatumGewijzigd datetime(6) [default: `CURRENT_TIMESTAMP`]
}

Table ProductAllergenen {
  id int [pk, increment]
  product_id int
  allergie_id int

  IsActief bit [default: 1]
  Opmerking varchar(255)
  DatumAangemaakt datetime(6) [default: `CURRENT_TIMESTAMP`]
  DatumGewijzigd datetime(6) [default: `CURRENT_TIMESTAMP`]
}

// --- PROCES: LEVERINGEN & PAKKETTEN ---

Table Leveringen {
  id int [pk, increment]
  leverancier_id int
  LeverdatumTijd datetime(6)
  eerstvolgendelevering datetime(6)

  IsActief bit [default: 1]
  Opmerking varchar(255)
  DatumAangemaakt datetime(6) [default: `CURRENT_TIMESTAMP`]
  DatumGewijzigd datetime(6) [default: `CURRENT_TIMESTAMP`]
}

Table LeveringProducten {
  id int [pk, increment]
  levering_id int
  product_id int
  Aantal int // Grote leveringen kunnen > 32000 zijn, dus int

  IsActief bit [default: 1]
  Opmerking varchar(255)
  DatumAangemaakt datetime(6) [default: `CURRENT_TIMESTAMP`]
  DatumGewijzigd datetime(6) [default: `CURRENT_TIMESTAMP`]
}

Table Voedselpakketten {
  id int [pk, increment]
  klant_id int
  DatumSamenstelling datetime(6) [default: `CURRENT_TIMESTAMP`]
  DatumUitgifte datetime(6)

  IsActief bit [default: 1]
  Opmerking varchar(255)
  DatumAangemaakt datetime(6) [default: `CURRENT_TIMESTAMP`]
  DatumGewijzigd datetime(6) [default: `CURRENT_TIMESTAMP`]
}

Table VoedselpakketProducten {
  id int [pk, increment]
  voedselpakket_id int
  product_id int
  Aantal tinyint [default: 1] // AANGEPAST: Pakket bevat zelden > 32000 items

  IsActief bit [default: 1]
  Opmerking varchar(255)
  DatumAangemaakt datetime(6) [default: `CURRENT_TIMESTAMP`]
  DatumGewijzigd datetime(6) [default: `CURRENT_TIMESTAMP`]
}

// --- KLANT SPECIFIEK ---

Table KlantWensen {
  id int [pk, increment]
  klant_id int
  wens_id int

  IsActief bit [default: 1]
  Opmerking varchar(255)
  DatumAangemaakt datetime(6) [default: `CURRENT_TIMESTAMP`]
  DatumGewijzigd datetime(6) [default: `CURRENT_TIMESTAMP`]
}

Table KlantAllergenen {
  id int [pk, increment]
  klant_id int
  allergie_id int

  IsActief bit [default: 1]
  Opmerking varchar(255)
  DatumAangemaakt datetime(6) [default: `CURRENT_TIMESTAMP`]
  DatumGewijzigd datetime(6) [default: `CURRENT_TIMESTAMP`]
}

// --- REFERENCES ---

Ref: users.role_id > Roles.id
Ref: Klanten.user_id - users.id

Ref: Leveranciers.adres_id > Adressen.id
Ref: Leveranciers.contactpersoon_id > contactpersoon.id

Ref: Klanten.adres_id > Adressen.id
Ref: Klanten.gezin_id > Gezinnen.id

Ref: Producten.categorie_id > ProductCategorieen.id
Ref: ProductAllergenen.product_id > Producten.id
Ref: ProductAllergenen.allergie_id > Allergenen.id
Ref: ProductKenmerken.product_id > Producten.id
Ref: ProductKenmerken.wens_id > Wensen.id

Ref: KlantWensen.klant_id > Klanten.id
Ref: KlantWensen.wens_id > Wensen.id
Ref: KlantAllergenen.klant_id > Klanten.id
Ref: KlantAllergenen.allergie_id > Allergenen.id

Ref: Voedselpakketten.klant_id > Klanten.id
Ref: VoedselpakketProducten.voedselpakket_id > Voedselpakketten.id
Ref: VoedselpakketProducten.product_id > Producten.id

Ref: Leveringen.leverancier_id > Leveranciers.id
Ref: LeveringProducten.levering_id > Leveringen.id
Ref: LeveringProducten.product_id > Producten.id
