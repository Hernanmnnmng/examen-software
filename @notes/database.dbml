// --- LARAVEL USERS & ROLES ---
Table Roles {
  id int [pk, increment]
  name varchar [unique] // Bijv: 'admin', 'worker', 'user'
  guard_name varchar [default: 'web']

  created_at timestamp [null]
  updated_at timestamp [null]
}

Table users {
  id int [pk, increment]
  role_id int // Verwijst naar Roles.id
  name varchar
  email varchar [unique]
  email_verified_at timestamp [null]
  password varchar
  remember_token varchar [null]
  created_at timestamp [null]
  updated_at timestamp [null]
}

// --- STAMGEGEVENS ---

Table Adressen {
  id int [pk, increment]
  Straat varchar
  Huisnummer varchar
  Postcode varchar
  Plaats varchar

  IsActief bit [default: 1]
  Opmerking text
  DatumAangemaakt datetime [default: `CURRENT_TIMESTAMP`]
  DatumGewijzigd datetime [default: `CURRENT_TIMESTAMP`]
}

Table ProductCategorieen {
  id int [pk, increment]
  Naam varchar [unique]

  IsActief bit [default: 1]
  Opmerking text
  DatumAangemaakt datetime [default: `CURRENT_TIMESTAMP`]
  DatumGewijzigd datetime [default: `CURRENT_TIMESTAMP`]
}

Table Wensen {
  id int [pk, increment]
  Omschrijving varchar [unique]

  IsActief bit [default: 1]
  Opmerking text
  DatumAangemaakt datetime [default: `CURRENT_TIMESTAMP`]
  DatumGewijzigd datetime [default: `CURRENT_TIMESTAMP`]
}

Table Allergenen {
  id int [pk, increment]
  Naam varchar [unique]

  IsActief bit [default: 1]
  Opmerking text
  DatumAangemaakt datetime [default: `CURRENT_TIMESTAMP`]
  DatumGewijzigd datetime [default: `CURRENT_TIMESTAMP`]
}

// --- RELATIES & PARTIJEN ---

Table Leveranciers {
  id int [pk, increment]
  Bedrijfsnaam varchar
  Adresid int
  contactpersoonid int

  IsActief bit [default: 1]
  Opmerking text
  DatumAangemaakt datetime [default: `CURRENT_TIMESTAMP`]
  DatumGewijzigd datetime [default: `CURRENT_TIMESTAMP`]
}

Table contactpersoon {
  id int [pk, increment]
  ContactNaam varchar
  Email varchar
  Telefoon varchar

  IsActief bit [default: 1]
  Opmerking text
  DatumAangemaakt datetime [default: `CURRENT_TIMESTAMP`]
  DatumGewijzigd datetime [default: `CURRENT_TIMESTAMP`]
}

Table Klanten {
  id int [pk, increment]
  user_id int [unique] // Koppeling naar users
  Adresid int
  Telefoon varchar
  gezinid int

  IsActief bit [default: 1]
  Opmerking text
  DatumAangemaakt datetime [default: `CURRENT_TIMESTAMP`]
  DatumGewijzigd datetime [default: `CURRENT_TIMESTAMP`]
}

Table Gezinnen {
  id int [pk, increment]
  GezinsNaam varchar
  Volwassenen int [default: 0]
  Kinderen int [default: 0]
  Babys int [default: 0]

  IsActief bit [default: 1]
  Opmerking text
  DatumAangemaakt datetime [default: `CURRENT_TIMESTAMP`]
  DatumGewijzigd datetime [default: `CURRENT_TIMESTAMP`]
}

// --- PRODUCTEN & VOORRAAD ---

Table Producten {
  id int [pk, increment]
  ProductNaam varchar [unique]
  EAN varchar [unique]
  Categorieid int
  AantalVoorraad int [default: 0]
  MagazijnLocatie varchar

  IsActief bit [default: 1]
  Opmerking text
  DatumAangemaakt datetime [default: `CURRENT_TIMESTAMP`]
  DatumGewijzigd datetime [default: `CURRENT_TIMESTAMP`]
}

Table ProductKenmerken {
  id int [pk, increment]
  Productid int
  Wensid int

  IsActief bit [default: 1]
  Opmerking text
  DatumAangemaakt datetime [default: `CURRENT_TIMESTAMP`]
  DatumGewijzigd datetime [default: `CURRENT_TIMESTAMP`]
}

Table ProductAllergenen {
  id int [pk, increment]
  Productid int
  Allergieid int

  IsActief bit [default: 1]
  Opmerking text
  DatumAangemaakt datetime [default: `CURRENT_TIMESTAMP`]
  DatumGewijzigd datetime [default: `CURRENT_TIMESTAMP`]
}

// --- PROCES: LEVERINGEN & PAKKETTEN ---

Table Leveringen {
  id int [pk, increment]
  Leverancierid int
  LeverdatumTijd datetime
  eerstvolgendelevering datetime

  IsActief bit [default: 1]
  Opmerking text
  DatumAangemaakt datetime [default: `CURRENT_TIMESTAMP`]
  DatumGewijzigd datetime [default: `CURRENT_TIMESTAMP`]
}

Table LeveringProducten {
  id int [pk, increment]
  Leveringid int
  Productid int
  Aantal int

  IsActief bit [default: 1]
  Opmerking text
  DatumAangemaakt datetime [default: `CURRENT_TIMESTAMP`]
  DatumGewijzigd datetime [default: `CURRENT_TIMESTAMP`]
}

Table Voedselpakketten {
  id int [pk, increment]
  Klantid int
  DatumSamenstelling datetime [default: `CURRENT_TIMESTAMP`]
  DatumUitgifte datetime

  IsActief bit [default: 1]
  Opmerking text
  DatumAangemaakt datetime [default: `CURRENT_TIMESTAMP`]
  DatumGewijzigd datetime [default: `CURRENT_TIMESTAMP`]
}

Table VoedselpakketProducten {
  id int [pk, increment]
  Voedselpakketid int
  Productid int
  Aantal int [default: 1]

  IsActief bit [default: 1]
  Opmerking text
  DatumAangemaakt datetime [default: `CURRENT_TIMESTAMP`]
  DatumGewijzigd datetime [default: `CURRENT_TIMESTAMP`]
}

// --- KLANT SPECIFIEK ---

Table KlantWensen {
  id int [pk, increment]
  Klantid int
  Wensid int

  IsActief bit [default: 1]
  Opmerking text
  DatumAangemaakt datetime [default: `CURRENT_TIMESTAMP`]
  DatumGewijzigd datetime [default: `CURRENT_TIMESTAMP`]
}

Table KlantAllergenen {
  id int [pk, increment]
  Klantid int
  Allergieid int

  IsActief bit [default: 1]
  Opmerking text
  DatumAangemaakt datetime [default: `CURRENT_TIMESTAMP`]
  DatumGewijzigd datetime [default: `CURRENT_TIMESTAMP`]
}

// --- REFERENCES ---

// Role Relatie
Ref: users.role_id > Roles.id

// User koppeling
Ref: Klanten.user_id - users.id

// Leverancier Relaties (Compleet gemaakt)
Ref: Leveranciers.Adresid > Adressen.id
Ref: Leveranciers.contactpersoonid > contactpersoon.id // NIEUW

// Klant Relaties (Compleet gemaakt)
Ref: Klanten.Adresid > Adressen.id
Ref: Klanten.gezinid > Gezinnen.id // NIEUW

// Product Relaties
Ref: Producten.Categorieid > ProductCategorieen.id
Ref: ProductAllergenen.Productid > Producten.id
Ref: ProductAllergenen.Allergieid > Allergenen.id
Ref: ProductKenmerken.Productid > Producten.id
Ref: ProductKenmerken.Wensid > Wensen.id

// Klant Wensen/Allergenen Relaties
Ref: KlantWensen.Klantid > Klanten.id
Ref: KlantWensen.Wensid > Wensen.id
Ref: KlantAllergenen.Klantid > Klanten.id
Ref: KlantAllergenen.Allergieid > Allergenen.id

// Pakket Relaties
Ref: Voedselpakketten.Klantid > Klanten.id
Ref: VoedselpakketProducten.Voedselpakketid > Voedselpakketten.id
Ref: VoedselpakketProducten.Productid > Producten.id

// Levering Relaties
Ref: Leveringen.Leverancierid > Leveranciers.id
Ref: LeveringProducten.Leveringid > Leveringen.id
Ref: LeveringProducten.Productid > Producten.id
